<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/message_bar_length"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/small_padding"
    android:paddingBottom="@dimen/small_padding"
    android:layout_gravity="start"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/receiver_text"
        android:layout_width="@dimen/text_container_width"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/medium_padding"
        android:paddingBottom="@dimen/medium_padding"
        android:layout_gravity="center_vertical"
        android:textAlignment="viewStart"
        android:background="@drawable/receiver_message"
        tools:ignore="RtlCompat" />
    <TextView
        android:id="@+id/receiver_time"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/chat_low_text"
        android:gravity="center"
        android:layout_marginStart="@dimen/small_padding"
        android:textAlignment="viewEnd"
        android:layout_gravity="center"
        tools:ignore="RtlCompat" />
</LinearLayout>