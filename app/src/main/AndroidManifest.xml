<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ge.bkapa.tkats.messengerapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/chat_image_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/chat_image_foreground"
        android:supportsRtl="true"
        android:theme="@style/Theme.MessengerApp">
        <activity android:name=".view.ChatActivity"></activity>
        <activity
            android:name=".view.SearchActivity"
            android:exported="true" />
        <activity android:name=".view.MessageListActivity" />
        <activity android:name=".view.AuthorizationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>